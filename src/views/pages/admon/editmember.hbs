<form action="/admon/savemember" method="post" autocomplete="off" id="formulario"
    onsubmit="return validaForm(event);">
    <input type="hidden" name="id" value="{{adder._id}}">
    <div class="row">
        <div class="col-md-6 mb-2">
            <div class="form-floating">
                <input type="text" name="names" id="names" class="form-control" placeholder="Nombres"
                    autocomplete="off" value="{{adder.names}}">
                <label for="Nombres"><i class="fas fa-signature fa-fw me-2"></i>Nombres</label>
            </div>
        </div>
        <div class="col-md-6 mb-2">
            <div class="form-floating">
                <input type="text" name="lastnames" id="lastnames" class="form-control" placeholder="Apellidos"
                    autocomplete="off"  value="{{adder.lastnames}}">
                <label for="lastnames"><i class="fas fa-signature fa-fw me-2"></i>Apellidos</label>
            </div>
        </div>
        <div class="col-md-6 mb-2">
            <div class="form-floating">
                <input type="text" name="rut" id="rut" class="form-control" placeholder="Rut" autocomplete="off" value="{{adder.rut}}">
                <label for="rut"><i class="fas fa-address-card fa-fw me-2"></i>Rut</label>
            </div>
        </div>
        <div class="col-md-6 mb-2">
            <div class="form-floating">
                <input type="text" name="phonenumber" id="phonenumber" class="form-control" placeholder="Teléfono"
                    autocomplete="off" value="{{adder.phonenumber}}">
                <label for="phonenumber"><i class="fas fa-phone fa-fw me-2"></i>Teléfono</label>
            </div>
        </div>
        <div class="col-md-6 mb-2">
            <div class="form-floating">
                <input type="email" name="email" id="email" class="form-control" placeholder="Email" autocomplete="off"  value="{{adder.email}}">
                <label for="email"><i class="fas fa-envelope fa-fw me-2"></i>Email</label>
            </div>
        </div>
        <div class="col-md-6 mb-2">
            <div class="form-floating">
                <select name="licencia" id="licencia" class="form-select">
                    <option value="">Selecciona una Opción</option>
                    {{#each licen}}
                        <option value="{{licencia}}" {{#if (eq licencia ../adder.licencia)}}selected{{/if}}>{{licencia}}</option>
                    {{/each}}
                </select>
                <label for="licencia"><i class="fas fa-graduation-cap fa-fw me-2"></i>Licencia {{adder.licencia}}</label>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="form-floating">
                <select name="roll" id="roll" class="form-select">
                    <option value="">Selecciona una Opción</option>
                    {{#each rolex}}
                        <option value="{{grant}}" {{#if (eq grant ../adder.roll)}}selected{{/if}}>{{roll}}</option>
                    {{/each}}
                </select>
                <label for="licencia"><i class="fas fa-shield fa-fw me-2"></i>Privilegios</label>
            </div>
        </div>
        <div class="col-md-12"></div>
