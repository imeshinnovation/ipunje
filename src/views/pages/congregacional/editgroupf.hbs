    <input type="hidden" id="id" value="{{famil._id}}">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="form-floating">
                    <input type="text" name="name_family" id="name_family" class="form-control" placeholder="Nombre del Grupo Familiar" autocomplete="off" value="{{famil.name_family}}">
