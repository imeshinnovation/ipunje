                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="form-floating">
                <select name="congregation" id="congregation" class="form-select">
                    <option value="">Selecciona una Opci√≥n</option>
                    {{#each sucursales}}
                        <option value="{{ nombre_sucursal }}" {{#if (eq ../famil.congregation nombre_sucursal)}}selected{{/if}}>{{ nombre_sucursal }}</option>
                    {{/each}}
                </select>
                <label for="grant"><i class="fas fa-place-of-worship fa-fw me-2"></i>Sucursal</label>
            </div>
            </div>
        </div>
    </div>
