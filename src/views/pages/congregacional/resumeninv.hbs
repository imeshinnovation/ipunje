{{>tables}}

<div class="card border-0 mb-4">
    <div class="card-body">
        <table data-toggle="table" data-toolbar="#tbar" data-show-columns="false" data-pagination="true"
            data-search="true" data-show-jump-to="true" data-page-size='50' data-show-export="true" data-export-types="['csv','']" data-mobile-responsive="true" data-check-on-init="true"
            data-click-to-select="true" data-toolbar="#toolbar" class="table table-striped table-bordered table-sm"
            data-page-list="[50, 100, 200, All]" width="100%" id="dtable"
            class="table table-striped table-bordered table-responsive mt-3 shadow-sm">
            <thead class="table-light">
                <tr>
                    <th data-field="producto" data-sortable="true">Producto</th>
                    <th data-field="cantidad" data-sortable="true">Cantidad</th>
                    <th data-field="costo" data-sortable="true">Costo</th>
                </tr>
            </thead>
            <tbody>
                {{#each invent}}
                <tr>
                    <td>{{producto}}</td>
                    <td>{{cantidad}}</td>
                    <td>{{formatCurrency costo_total}}</td>
                </tr>
                {{/each}}
                <tr>
                    <td colspan="2">Total Costo Inventario</td>
                    <td>{{formatCurrency total.0.total}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

{{>end}}