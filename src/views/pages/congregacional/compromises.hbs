{{>tables}}

<div class="card border-0 mb-4">
    <div class="card-body">

        <div id="tbar">
            <button class="btn btn-secondary shadow-sm" onclick="loadContent('amir','/congregacional/addcompromise');"><i
                    class="fas fa-plus fa-fw me-2"></i>Agregar Compromiso</button>
        </div>

        <table data-toggle="table" data-toolbar="#tbar" data-show-columns="false" data-pagination="true"
            data-search="true" data-show-jump-to="true" data-page-size='10' data-show-export="true"  data-export-types="['csv','']" data-mobile-responsive="true" data-check-on-init="true"
            data-click-to-select="true" data-toolbar="#toolbar" class="table table-striped table-bordered table-sm"
            data-page-list="[50, 100, 200, All]" width="100%" id="dtable"
            class="table table-striped table-bordered table-responsive mt-3 shadow-sm">
            <thead class="table-light">
                <tr>
                    <th data-field="compromise" data-sortable="true">Compromiso</th>
                    <th data-field="status" data-sortable="true">Estado</th>
                    <th data-field="date_compromise" data-sortable="true">Fecha</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each compromise}}
                <tr>
                    <td>{{compromise}}</td>
                    <td>{{#if (eq status 0)}}Pendiente{{else}}Completado{{/if}}</td>
                    <td>{{date_compromise}}</td>
                    <td>
                        <div class="btn-group btn-secondary shadow-sm w-100">
                            <button class="btn btn-sm btn-light" title="Editar"
                                onclick="loadContent('amir','/congregacional/editcompromise/{{_id}}')"><i
                                    class="fas fa-pen fa-fw"></i></button>
                            <button class="btn btn-sm btn-light" title="Eliminar" onclick="delDialog('{{_id}}', '{{compromise}}', 'remCompromise', 'Eliminar Compromiso');"><i
                                    class="fas fa-trash fa-fw"></i></button>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


{{>end}}