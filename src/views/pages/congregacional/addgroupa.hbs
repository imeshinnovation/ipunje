<div class="card">
    <div class="card-header">Agregar Nuevo Amigo - Visita</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="form-floating">
                    <input type="text" name="names" id="names" class="form-control"
                        placeholder="Nombres Completos" autocomplete="off">
                    <label for="names"><i class="fas fa-font fa-fw me-2"></i>Nombres Completos</label>
                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="form-floating">
                    <select name="sucursal" id="sucursal" class="form-select">
                        <option value="">Selecciona una Opción</option>
                        {{#each sucursales}}
                        <option value="{{ nombre_sucursal }}">{{ nombre_sucursal }}</option>
                        {{/each}}
                    </select>
                    <label for="sucursal"><i class="fas fa-place-of-worship fa-fw me-2"></i>Sucursal</label>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="form-floating">
                    <input type="email" name="email" id="email" class="form-control" placeholder="Correo Electrónico" autocomplete="off">
                    <label for="email"><i class="fas fa-envelope fa-fw me-2"></i>Correo Electrónico</label>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="form-floating">
                    <input type="phone" name="phone" id="phone" class="form-control" placeholder="Número de Teléfono" autocomplete="off">
                    <label for="phone"><i class="fas fa-phone fa-fw me-2"></i>Número de Teléfono</label>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-success" onclick="addGA();"><i class="fas fa-save me-2"></i>Guardar Cambios</button>
    </div>
</div>

{{>end}}