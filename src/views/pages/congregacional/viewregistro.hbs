<div class="card shadow bg-white mt-2">
    <div class="card-header">Vista de Registro del Inventario</div>
    <div class="card-body">
        <div class="card border-0 p-0 mt-2">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="input-group shadow-sm">
                            <div class="input-group-text"><i class="fas fa-store fa-fw me-2"></i>Producto</div>
                            <input type="text" value="{{regi.producto}}" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="input-group shadow-sm">
                            <div class="input-group-text"><i class="fas fa-hashtag fa-fw me-2"></i>Cantidad</div>
                            <input type="number" value="{{regi.cantidad}}" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="input-group shadow-sm">
                            <div class="input-group-text"><i class="fas fa-money-bill-1-wave fa-fw me-2"></i>Costo
                                Unitario
                            </div>
                            <input type="text" class="form-control" value="{{formatCurrency regi.costo_unitario}}" readonly>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="input-group shadow-sm">
                            <div class="input-group-text"><i class="fas fa-money-bill-1 fa-fw me-2"></i>Costo Total
                            </div>
                            <input type="text" class="form-control" value="{{formatCurrency regi.costo_total}}" readonly>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="input-group shadow-sm">
                            <div class="input-group-text"><i class="fas fa-font-awesome fa-fw me-2"></i>Estado</div>
                            <input type="text" class="form-control" readonly value="{{#if (eq regi.status 1)}}Activo{{else if (eq regi.status 2)}}Depreciado{{else}}De Baja{{/if}}">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="input-group shadow-sm">
                            <div class="input-group-text"><i class="fas fa-file-signature fa-fw me-2"></i>Producto
                                Contable</div>
                            <input type="text" class="form-control" id="code_name" readonly>
                            <script>
                                getProd("{{regi.producto_contable}}").then((res) => $("#code_name").val(res))
                            </script>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="input-group shadow-sm">
                            <div class="input-group-text"><i class="fas fa-file-signature fa-fw me-2"></i>Descripción
                            </div>
                            <textarea class="form-control" id="description" rows="5" readonly>{{regi.description}}</textarea>
                        </div>
                    </div>
                    <div class="col-md-12 mb-2">
                        <div class="card mb-2">
                            <div class="card-header d-flex">
                                <div class="me-4">
                                    <h3>Imágen Factura Física</h3>
                                </div>
                                
                            </div>
                            <div class="card-body p-0 m-0 text-center">
                                <img id="frame" class="img-fluid" src="{{regi.factura_fisica}}" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {

        let CLP = new Intl.NumberFormat('es-CL', {
            style: 'currency',
            currency: 'CLP',
        });

        $("#costo_unitario").on("change", function () {
            $("#costo_total").val(parseInt($(this).val()) * parseInt($("#cantidad").val()))
            //$(this).val(CLP.format($(this).val()))
        })
    });
</script>