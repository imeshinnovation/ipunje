{{>navbar}}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a aria-current="page" href="#" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sucursales</li>
        </ol>
    </nav>

    <div class="card shadow bg-white mt-4">
        <div class="card-body">

            <div id="tbar">
                <button class="btn btn-secondary shadow-sm mb-3"
                    onclick="location.href='/congregacional/addsucursal'"><i class="fas fa-plus fa-fw me-2"></i>Nueva
                    Sucursal</button>
            </div>

            <table data-toggle="table" data-toolbar="#tbar" data-show-columns="false" data-pagination="true"
                data-search="true" data-show-jump-to="true" data-page-size='10' data-show-export="true"
                data-export-types="['csv','']" data-mobile-responsive="true" data-check-on-init="true"
                data-click-to-select="true" data-toolbar="#toolbar" class="table table-striped table-bordered table-sm"
                data-page-list="[50, 100, 200, All]" width="100%" id="dtable"
                class="table table-striped table-bordered table-responsive mt-3 shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th data-field="nombre" data-sortable="true">Nombre Sucursal</th>
                        <th data-field="tipo" data-sortable="true">Tipo</th>
                        <th data-field="direccion" data-sortable="true">Direcci√≥n</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each sucursales}}
                    <tr>
                        <td class="text-capitalize">{{nombre_sucursal}}</td>
                        <td class="text-capitalize">{{tipo_sucursal}}</td>
                        <td class="text-capitalize">{{direccion}}</td>
                        <td>
                            <div class="btn-group btn-secondary shadow w-100">
                                <button class="btn btn-sm btn-light"
                                    onclick="location.href='/congregacional/viewsucursal/{{_id}}'"><i
                                        class="fas fa-eye fa-fw"></i></button>
                                <button class="btn btn-sm btn-light"
                                    onclick="location.href='/congregacional/editsucursal/{{_id}}'"><i
                                        class="fas fa-pen fa-fw"></i></button>
                                <button class="btn btn-sm btn-light"
                                    onclick="delDialog('{{_id}}', '{{nombre_sucursal}}','remSucursal', 'Eliminar Sucursal');"
                                    title="Eliminar Sucursal"><i class="fas fa-trash fa-fw"></i></button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
        <div class="card-footer"></div>
    </div>
</div>

{{>end}}