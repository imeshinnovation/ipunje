
<div class="card">
    <div class="card-header">Grupo Familiar</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="form-floating">
                    <div class="form-control" id="name_family">{{view.name_family}}</div>
                    <label for="name_family"><i class="fas fa-signature fa-fw me-2"></i>Nombre del Grupo Familiar</label>
                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="form-floating">
                    <div class="form-control" id="congregation">{{view.congregation}}</div>
                    <label for="congregation"><i class="fas fa-place-of-worship fa-fw me-2"></i>Sucursal</label>
                </div>
            </div>

            <div class="col-md-6 mb-2">
                <div class="form-floating">
                    <div class="form-control" id="count_{{view._id}}"></div>
                    <label for="congregation">
                    <i class="fas fa-place-of-worship fa-fw me-2"></i>Integrantes de la Familia
                    </label>
                </div>
            </div>
            <div class="col-md-12 mb-2"><hr></div>
            <div class="col-md-12 mb-2">
                <table data-toggle="table" data-search="true" data-filter-control="true" data-show-export="false"
    data-click-to-select="true" data-toolbar="#tbar" data-page-list="[50, 100, 200, All]"  width="100%" id="table"
    class="table table-striped table-bordered table-responsive mt-3 shadow-sm">
    <thead class="table-primary">
        <tr>
            <th data-field="nombres" data-sortable="true">Nombres</th>
            <th data-field="apellidos" data-sortable="true">Apellidos</th>
            <th data-field="email" data-sortable="true">Email</th>
            <th data-field="placefamily" data-sortable="true">Roll Familiar</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each userx}}
        <tr>
            <td>{{names}}</td>
            <td>{{lastnames}}</td>
            <td>{{email}}</td>
            <td>{{placefamily}}</td>
            <td>
                <div class="btn-group w-100">
                <button class="btn btn-sm btn-info" onclick="loadContent('memr','/congregacional/viewmember/{{_id}}');"><i class="fas fa-eye fa-fw"></i></button>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
            </div>
        </div>
    </div>
    
</div>

<script>
    countFamily("{{view._id}}");
</script>

{{>end}}
