{{>tables}}

<div id="tbar">
    <button class="btn btn-secondary shadow-sm mb-2" onclick="loadContent('maindiezmos','/financiero/adddiezmo');"><i
            class="fas fa-plus fa-fw me-2"></i>Nuevo Registro</button>
    <button class="btn btn-secondary shadow-sm mb-2" onclick="calcUI();"><i
            class="fas fa-calculator fa-fw me-2"></i>Calculadora</button>
</div>

<table data-toggle="table" data-toolbar="#tbar" data-show-columns="false" data-pagination="true" data-search="true"
    data-show-jump-to="true" data-page-size='10' data-show-export="true" data-export-types="['csv','']"
    data-mobile-responsive="true" data-check-on-init="true" data-click-to-select="true" data-toolbar="#toolbar"
    class="table table-striped table-bordered table-sm" data-page-list="[50, 100, 200, All]" width="100%" id="dtable"
    class="table table-striped table-bordered table-responsive mt-3 shadow-sm">
    <thead class="table-light">
        <tr>
            <th data-filed="code" data-sortable="true">Documento</th>
            <th data-field="fecha_registro" data-sortable="true">Fecha Registro</th>
            <th data-field="aporte" data-sortable="true">Aporte</th>
            <th data-field="nombre_pastor" data-sortable="true">Pastor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each alld}}
        <tr>
            <td>{{code}}</td>
            <td>{{date_record}}</td>
            <td>$ {{aporte}}</td>
            <td>{{nombre_pastor}}</td>
            {{#if (eq ../user.roll 1)}}
            <td>
                <div class="btn-group btn-secondary shadow-sm w-100">
                    <!--<button class="btn btn-sm btn-light"
                        onclick="delDialog('{{_id}}', '$ {{aporte}}', 'remDiezmo', 'Eliminar Registro')"
                        title="Eliminar Registro"><i class="fas fa-trash fa-fw"></i></button>-->
                    <button class="btn btn-sm btn-light" title="Ver Registro" onclick="loadContent('maindiezmos','/financiero/viewdiezmo/{{_id}}');"><i class="fas fa-eye fa-fw"></i></button>
                </div>
            </td>
            {{else}}
            <td>
                <div class="btn-group btn-secondary shadow-sm w-100">
                    <button class="btn btn-sm btn-light" title="Ver Registro" onclick="loadContent('maindiezmos','/financiero/viewdiezmo/{{_id}}');"><i class="fas fa-eye fa-fw"></i></button>
                </div>
            </td>
            {{/if}}
        </tr>
        {{/each}}
    </tbody>
</table>

{{>end}}

